<section class="authPage">
  <div class="authGrid">
    <div class="authPanel">
      <div class="authCard">
        <div class="authHeading">INICIAR SESIÓN</div>

        <form id="loginForm" class="authForm">
          <div class="authField">
            <label for="correo">Email Address</label>
            <input id="correo" type="email" placeholder="Email Address" required />
          </div>

          <div class="authField">
            <label for="password">Password</label>
            <input id="password" type="password" placeholder="Password" required />
            <div class="authHint">It must be a combination of minimum 8 letters, numbers, and symbols.</div>
          </div>

          <div class="authRow">
            <label class="authCheck">
              <input type="checkbox" />
              <span>Remember me</span>
            </label>

            <a class="authLink" href="#" onclick="return false;">Forgot Password?</a>
          </div>

          <button class="authSubmit" type="submit">INICIAR SESIÓN</button>

          <div id="authMsg" class="authMsg hide"></div>

          <div class="authSocial">
            <button type="button" class="authSocialBtn" disabled title="No disponible en esta práctica">
              G &nbsp; Log in with Google
            </button>
            <button type="button" class="authSocialBtn" disabled title="No disponible en esta práctica">
               &nbsp; Log in with Apple
            </button>
          </div>

          <a class="authBottomLink" href="/register">No account yet? Sign Up</a>
        </form>
      </div>
    </div>

    <aside class="authHero" aria-hidden="true">
      <div class="authHeroText">
        Lo mejor<br/>para tu<br/>mejor amigo
      </div>
      <div class="authHeroDog"></div>
      <div class="authHeroWaves"></div>
    </aside>
  </div>
</section>
