<section class="stack">
  <div class="row" style="justify-content: space-between; align-items: center;">
    <h1 class="h1">Mi cuenta</h1>
    <div id="rolBadge"></div>
  </div>
  
  <div id="profileStats"></div>

  <div class="card card-pad">
    <h2 class="h2">Información personal</h2>
    <p class="muted">Actualiza tus datos de perfil.</p>

    <div style="height:18px"></div>

    <form id="profileForm" class="stack" style="max-width:520px;">
      <div class="field">
        <div class="label">Nombre</div>
        <input class="input" type="text" id="nombre" placeholder="Tu nombre" required>
      </div>

      <div class="field">
        <div class="label">Correo</div>
        <input class="input" type="email" id="correo" placeholder="correo@ejemplo.com">
      </div>

      <div class="field">
        <div class="label">Teléfono (opcional)</div>
        <input class="input" type="text" id="telefono" placeholder="55 1234 5678">
      </div>

      <button class="btn btn-primary" type="submit">Actualizar perfil</button>
    </form>
  </div>

  <div class="card card-pad">
    <h2 class="h2">Cambiar contraseña</h2>
    <p class="muted">Actualiza tu contraseña de acceso.</p>

    <div style="height:18px"></div>

    <form id="changePasswordForm" class="stack" style="max-width:520px;">
      <div class="field">
        <div class="label">Contraseña actual</div>
        <input class="input" type="password" id="password_actual" placeholder="••••••••" required>
      </div>

      <div class="field">
        <div class="label">Nueva contraseña</div>
        <input class="input" type="password" id="password_nueva" placeholder="Mínimo 8, con símbolo" required>
      </div>

      <button class="btn btn-secondary" type="submit">Cambiar contraseña</button>
    </form>
  </div>

  <div class="card card-pad" style="border-color: rgba(214, 74, 74, 0.3); background: rgba(214, 74, 74, 0.05);">
    <h2 class="h2">Zona peligrosa</h2>
    <p class="muted">Eliminar tu cuenta es permanente.</p>

    <div style="height:18px"></div>

    <button class="btn" style="background: var(--danger); color: #fff;" type="button" onclick="deleteAccount()">
      Eliminar mi cuenta
    </button>
  </div>
</section>

<script>
  async function deleteAccount() {
    const password = prompt("Escribe tu contraseña para confirmar:");
    if (!password) return;

    const confirmacion = prompt('Escribe "ELIMINAR" (en mayúsculas) para confirmar:');
    if (confirmacion !== "ELIMINAR") {
      alert("Cancelado");
      return;
    }

    try {
      const token = localStorage.getItem("accessToken");
      const res = await fetch("/api/user/eliminar-cuenta", {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
          Authorization: `Bearer ${token}`
        },
        body: JSON.stringify({ password, confirmacion })
      });

      const data = await res.json();

      if (!res.ok) {
        alert(data.msg || "No se pudo eliminar la cuenta");
        return;
      }

      alert("✅ Cuenta eliminada correctamente");
      localStorage.clear();
      window.location.href = "/";

    } catch (err) {
      alert("Error al eliminar cuenta");
    }
  }
</script>

<script src="/js/profile.js"></script>