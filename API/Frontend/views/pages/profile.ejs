<section class="profilePage">
  <div class="profileTop">
    <!-- INFO CUENTA -->
    <div class="profileCard profileCard--account">
      <div class="profileTitle">INFORMACIÓN DE CUENTA</div>

      <div class="profileAccountGrid">
        <div class="profileAvatar" aria-hidden="true"></div>

        <div class="profileData">
          <div class="profileItem">
            <div class="profileLabel">Nombre</div>
            <div class="profileValue" id="pNombre">—</div>
          </div>

          <div class="profileItem">
            <div class="profileLabel">Correo</div>
            <div class="profileValue" id="pCorreo">—</div>
          </div>

          <div class="profileItem">
            <div class="profileLabel">Contacto</div>
            <div class="profileValue" id="pTelefono">—</div>
          </div>

          <div class="profileInline2">
            <div class="profileItem">
              <div class="profileLabel">Edad</div>
              <div class="profileValue" id="pEdad">—</div>
            </div>
            <div class="profileItem">
              <div class="profileLabel">Género</div>
              <div class="profileValue" id="pGenero">—</div>
            </div>
          </div>
        </div>

        <div class="profileBtns">
          <button class="btnPill btnPill--brown" id="btnEditProfile" type="button">EDITAR PERFIL</button>
          <button class="btnPill btnPill--brown" id="btnDeleteAccount" type="button">BORRAR CUENTA</button>
        </div>
      </div>
    </div>

    <!-- INFO PAGO -->
    <div class="profileCard profileCard--pay">
      <div class="profileTitle profileTitle--white">INFORMACIÓN DE PAGO</div>

      <div class="payList" id="payList"></div>

      <button class="btnPill btnPill--white" id="btnEditPayment" type="button">EDITAR METODO</button>
    </div>
  </div>

  <!-- ENVIO -->
  <div class="profileCard profileCard--ship">
    <div class="profileTitle profileTitle--dark">INFORMACIÓN DE ENVIO</div>

    <div class="shipGrid">
      <div class="shipItem">
        <div class="shipLabel">PAÍS</div>
        <div class="shipValue" id="sPais">—</div>
      </div>

      <div class="shipItem">
        <div class="shipLabel">ALCALDÍA</div>
        <div class="shipValue" id="sAlcaldia">—</div>
      </div>

      <div class="shipItem">
        <div class="shipLabel">CÓDIGO POSTAL</div>
        <div class="shipValue" id="sCP">—</div>
      </div>
    </div>

    <button class="btnPill btnPill--navy" id="btnEditShipping" type="button">EDITAR UBICACIÓN</button>
  </div>

  <!-- acciones -->
  <div class="profileActions">
    <button class="btnWideBlack" id="btnLogout" type="button">CERRAR SESIÓN</button>
    <button class="btnWideBlack" id="btnEditAll" type="button">EDITAR TODA LA INFORMACIÓN</button>
  </div>

  <!-- bottom: promo + historial -->
  <div class="profileBottom">
    <div class="promoCard">
      <div class="promoText">PETWOOF<br/>TU MEJOR<br/>OPCIÓN</div>
      <div class="promoDog" aria-hidden="true"></div>
      <div class="promoWaves" aria-hidden="true"></div>
    </div>

    <div class="historyCard">
      <div class="historyTitle">HISTORIAL DE COMPRAS</div>

      <div class="historyList" id="historyList"></div>

      <button class="historyMore" id="btnHistoryMore" type="button">Ver Más</button>
    </div>
  </div>

  <!-- Modal reutilizable -->
  <div class="modal hide" id="modal">
    <div class="modal__box">
      <div class="modal__head">
        <div class="modal__title" id="modalTitle">Editar</div>
        <button class="modal__close" id="modalClose" type="button">✕</button>
      </div>

      <div class="modal__body" id="modalBody"></div>

      <div class="modal__foot">
        <button class="pillBtn pillBtn--outline" id="modalCancel" type="button">Cancelar</button>
        <button class="pillBtn" id="modalSave" type="button">Guardar</button>
      </div>
    </div>
  </div>
</section>
